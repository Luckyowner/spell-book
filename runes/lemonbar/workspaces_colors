#!/bin/sh
BLUE="#0a6cf5"
RED="#bd2c40"
PASOK_GREEN="#1abc9c"
FG="#FFFFFF"
INVERSE_FG="#000000"
BAR_COLOR="#AA222222"

export COLOR_MONITOR_FG=$FG
export COLOR_MONITOR_BG=$BAR_COLOR

export COLOR_FOCUSED_MONITOR_FG=$FG
export COLOR_FOCUSED_MONITOR_BG=$BAR_COLOR

export COLOR_FOCUSED_FREE_FG=$FG
export COLOR_FOCUSED_FREE_BG=$BAR_COLOR
export COLOR_FOCUSED_FREE_UL=$BLUE

export COLOR_ACTIVE_FREE_FG=$FG
export COLOR_ACTIVE_FREE_BG=$BAR_COLOR
export COLOR_ACTIVE_FREE_UL=$PASOK_GREEN

export COLOR_OCCUPIED_FG=$FG
export COLOR_OCCUPIED_BG=$BAR_COLOR
export COLOR_OCCUPIED_UL=$BAR_COLOR

export COLOR_ACTIVE_OCCUPIED_FG=$INVERSE_FG
export COLOR_ACTIVE_OCCUPIED_BG="#FF${PASOK_GREEN#\#}"
export COLOR_ACTIVE_OCCUPIED_UL=$PASOK_GREEN

export COLOR_FOCUSED_OCCUPIED_FG=$FG
export COLOR_FOCUSED_OCCUPIED_BG="#FF${BLUE#\#}"
export COLOR_FOCUSED_OCCUPIED_UL="$BLUE"

export COLOR_URGENT_FG=$FG
export COLOR_URGENT_BG=$RED
export COLOR_URGENT_UL=$RED

export COLOR_FOCUSED_URGENT_FG=$FG
export COLOR_FOCUSED_URGENT_BG=$RED
export COLOR_FOCUSED_URGENT_UL=$RED

export COLOR_STATE_FG=$PASOK_GREEN
export COLOR_STATE_BG=$BAR_COLOR
