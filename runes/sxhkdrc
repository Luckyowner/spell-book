super + F10
    if [ -e /tmp/.dnd ]; then \
        ssh mirrodin automation/discord/online & \
        rm /tmp/.dnd ; \
    else \
        dunstctl close-all ; \
        ssh mirrodin automation/discord/busy & \
        touch /tmp/.dnd ; \
    fi &>/dev/null ; \
    pkill -10 -x lemon

