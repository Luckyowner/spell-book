super + shift + F3
    d="$(xdotool search --name "Discord" | \
         xargs -L1 xdotool get_desktop_for_window | \
         grep '^[0-9]' | \
         head -1)" ; \
    while pgrep -i discord; do pkill Discord; done ; \
    bspc rule -a '*:*:Discord Updater' -o desktop=^$(( d + 1 )); \
    bspc rule -a '*:*:Discord' -o desktop=^$(( d + 1 )); \
    discord


