super + shift + s
    bspc node -g sticky

super + shift + m
    if marked=$(bspc query -N -n .marked); then \
        bspc node --swap $marked ; \
        bspc node $marked -g 'marked=off' ; \
    else \
        bspc node -g marked ; \
    fi

super + colon
    bspc node --state pseudo_tiled; \
    bspc node --resize bottom_right 50 800

