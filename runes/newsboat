show-read-feeds no
auto-reload yes
reload-threads 100
feed-sort-order lastupdated-desc

bind-key j down
bind-key k up
bind-key j next articlelist
bind-key k prev articlelist
bind-key J next-feed articlelist
bind-key K prev-feed articlelist
bind-key G end
bind-key g home
bind-key d pagedown
bind-key u pageup
bind-key l open
bind-key h quit
bind-key a toggle-article-read
bind-key n next-unread
bind-key N prev-unread
bind-key D pb-download
bind-key U show-urls

color   listnormal          cyan     default
color   listfocus           yellow   default
color   listnormal_unread   blue     default
color   listfocus_unread    yellow   default
color   info                red      black
color   article             white    default
feedlist-format "%3U %t %S"

browser xdg-open
macro , open-in-browser
macro v set browser "run_disown mpv"; open-in-browser ; set browser vimb
macro y set browser "xclip -sel clip <<<" ; open-in-browser ; set browser vimb
macro x set browser "del_rss_feed"; open-in-browser ; set browser vimb
macro i set show-read-feeds no
macro I set show-read-feeds yes
