#!/usr/bin/env sh
xrdb -merge ~/.config/X11/Xresources

# deamons
changeMeWallCicle &
clean_ws_names &
picom --experimental-backends --daemon
battery_check &
dunst &
clipmenud &
command -V espanso && espanso -v worker &

# Settings
k # keyboard settings
[ "$(uname -n)" = tolaria ] &&
    xrandr --output HDMI-0 --mode 1920x1080 --pos 0x360 --rotate normal \
        --output DP-4 --primary --mode 2560x1440 --pos 1920x0 --rotate normal --rate 144

if command -V herbstluftwm >/dev/null 2>/dev/null; then
    exec herbstluftwm
else
    exec bspwm
fi
