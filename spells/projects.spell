#!/bin/sh
# Open dmenu, show me my projects, open a terminal in the selected one

dir="$(
    find -H ~/projects -mindepth 1 -maxdepth 1 -type d -printf "%T@\t%p\n" |
        sort -nr |
        cut -f2 |
        xargs -L1 basename |
        dmenu -l 50 -i -p project
)"
[ "$dir" ] && $TERMINAL --working-directory "$HOME/projects/$dir"
