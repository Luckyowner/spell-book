#!/bin/bash

bspc subscribe desktop_focus |
    while read -r _; do
        bspc wm -d |
            jq '.monitors | map(.desktops) | flatten | map(select(.root == null)) | map([.id, .name]) | .[] | @csv' -r |
            sed -E 's/,"([0-9]+).*"/,\1/' |
            while IFS=',' read -r id name; do
                bspc desktop "$id" --rename "$name" --layout tiled
            done

    done
