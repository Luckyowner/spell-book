#!/bin/bash

if pgrep -a -o glava | grep -v 'glavad'; then
    pkill glava
else
    num_screens="$(xrandr --listactivemonitors | awk -F: '{print($2 - 1); exit}')"
    offset=$(( num_screens * 1920 ))
    setsid /bin/sh -c "glava \
        --request='setgeometry $offset 22 1920 1058' \
        --request='setopacity \"xroot\"' \
        -d $*" &

    sleep 0.01
fi
